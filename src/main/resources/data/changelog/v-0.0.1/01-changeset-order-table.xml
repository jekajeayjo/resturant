<!--            </column>-->
<!--            <column name="name" type="varchar(255)">-->
<!--                <constraints nullable="true"/>-->
<!--            </column>-->
<!--        </createTable>-->
        <rollback>
            <sqlFile path="01-drop-order-table.sql"
                     dbms="postgresql"
                     encoding="UTF-8"
                     endDelimiter="\nGO"
                     relativeToChangelogFile="true"
                     splitStatements="true"
                     stripComments="true"/>
        </rollback>
    </changeSet>
</databaseChangeLog>